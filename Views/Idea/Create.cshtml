@model website.Models.IdeaModel

@{
    ViewData["Title"] = "Create";
}

<h2>Join with your project!</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        @using (Html.BeginForm("Create", "Idea", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ProductName" class="control-label"></label>
                <input asp-for="ProductName" class="form-control" />
                <span asp-validation-for="ProductName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FundGoal" class="control-label"></label>
                <input asp-for="FundGoal" class="form-control" />
                <span asp-validation-for="FundGoal" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ImagePath" class="control-label"></label>
                <input asp-for="ImagePath" class="form-control" type="file" />
            </div>
            <div class="form-group">
                <label asp-for="ProductContent" class="control-label"></label>
                <input asp-for="ProductContent" class="form-control" />
                <span asp-validation-for="ProductContent" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        }
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
